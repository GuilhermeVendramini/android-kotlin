<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextResult"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:focusable="false" android:focusableInTouchMode="false"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:minWidth="48dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextValue"
            app:layout_constraintStart_toStartOf="@+id/editTextValue" app:layout_constraintEnd_toStartOf="@+id/button1"
            android:layout_marginEnd="4dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button0" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button1" app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button2"
            android:minWidth="48dp" app:layout_constraintEnd_toEndOf="@+id/editTextValue"
    />
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/button0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button0" android:minWidth="48dp"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:layout_marginEnd="4dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button6"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button7"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button6"
            android:minWidth="48dp" app:layout_constraintEnd_toEndOf="@+id/button3"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintStart_toStartOf="@+id/button4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/buttonDot"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            app:layout_constraintTop_toTopOf="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toStartOf="@+id/buttonEquals"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            app:layout_constraintTop_toTopOf="@+id/buttonDot"
            app:layout_constraintStart_toEndOf="@+id/buttonDot" android:layout_marginStart="4dp"
            android:minWidth="48dp" app:layout_constraintEnd_toEndOf="@+id/button7"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toStartOf="@+id/button8"
            app:layout_constraintEnd_toStartOf="@+id/buttonMultiply"
            android:layout_marginEnd="4dp" android:minWidth="48dp" android:layout_marginTop="16dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            app:layout_constraintTop_toTopOf="@+id/buttonDivide" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide" app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
            android:layout_marginEnd="4dp" android:minWidth="48dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/buttonMultiply"
            app:layout_constraintEnd_toStartOf="@+id/buttonPlus"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@+id/buttonMultiply" android:minWidth="48dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/buttonMinus"
            app:layout_constraintTop_toTopOf="@+id/buttonMinus" android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonEquals"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textViewOperation" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextValue" android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/editTextValue"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextValue"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editTextResult"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>